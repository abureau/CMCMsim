	journal = {Environmental Science \& Technology},
	journal-full = {Environmental science \& technology},
	mesh = {Biomarkers; Birth Weight; Cytochrome P-450 CYP2E1; Disinfection; Female; Glutathione Transferase; Humans; Maternal Exposure; Polymorphism, Genetic; Pregnancy; Prenatal Exposure Delayed Effects; Trihalomethanes},
	month = {Oct},
