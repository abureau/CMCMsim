	issn = {0160-4120},
	journal = {Environment International},
	keywords = {DBPs, Intra-uterine-growth-restriction, Gene polymorphisms, CYP2E1, GSTM1, GSTT1},
	pages = {220-231},
	title = {{Disinfection by-products exposure and intra-uterine growth restriction: Do genetic polymorphisms of CYP2E1or deletion of GSTM1 or GSTT1 modify the association?}},
	url = {https://www.sciencedirect.com/science/article/pii/S0160412016301131},
	volume = {92-93},
	year = {2016},
	bdsk-url-1 = {https://www.sciencedirect.com/science/article/pii/S0160412016301131},
