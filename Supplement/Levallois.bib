	doi = {10.1124/dmd.31.3.266},
	journal = {Drug Metabolism and Disposition: the Biological Fate of Chemicals},
	journal-full = {Drug metabolism and disposition: the biological fate of chemicals},
	mesh = {Biotransformation; Cell Line, Transformed; Chloroform; Cytochrome P-450 Enzyme System; Humans; Isoenzymes; Microsomes, Liver; Oxidation-Reduction},
	month = {Mar},
